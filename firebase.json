{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/events",
        "run": {
          "serviceId": "produtik-be-prod",
          "region": "southamerica-east1"
        }
      },
      {
        "source": "/events/**",
        "run": {
          "serviceId": "produtik-be-prod",
          "region": "southamerica-east1"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}